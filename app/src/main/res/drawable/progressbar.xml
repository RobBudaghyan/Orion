<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />
            <gradient android:startColor="@color/secondary_2" android:endColor="#004400" android:angle="0" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <gradient android:startColor="@color/primary_1" android:endColor="#008800" android:angle="0" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <gradient android:startColor="@color/primary_1" android:endColor="#00FF00" android:angle="0" />
            </shape>
        </clip>
    </item>
</layer-list>
