<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/box_round_corners_background"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/orbitron_black"
        android:gravity="center"
        android:text="Add a New Contact"
        android:textSize="22sp"
        android:layout_marginVertical="10dp"
        android:textColor="@color/text_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_hashtag"
            app:tint="@color/primary_1" />

        <EditText
            android:id="@+id/edit_text_contact_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/box_round_corners_background"
            android:fontFamily="@font/orbitron_black"
            android:hint="____"
            android:inputType="number"
            android:maxLength="4"
            android:text=""
            android:layout_marginVertical="10dp"
            android:padding="12dp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/secondary_2"
            android:textSize="19sp"/>


        <EditText
            android:id="@+id/edit_text_contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box_round_corners_background"
            android:hint="Name"
            android:textColorHint="@color/secondary_2"
            android:fontFamily="@font/orbitron_black"
            android:maxLength="7"
            android:textColor="@color/text_color"
            android:textSize="19sp"
            android:padding="12dp"
            android:layout_marginStart="10dp"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingTop="16dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_cancel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textAlignment="center"
            android:background="@drawable/btn_style"
            android:fontFamily="@font/orbitron_black"
            android:textColor="@color/text_color"
            android:layout_marginRight="10dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_add"
            android:layout_width="100dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:background="@drawable/btn_style"
            android:fontFamily="@font/orbitron_black"
            android:text="Add" />
    </LinearLayout>
</LinearLayout>
