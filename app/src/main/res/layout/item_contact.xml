<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/box_round_corners_background"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Contact Name"
        android:textAlignment="center"
        android:fontFamily="@font/orbitron_black"
        android:textColor="@color/text_color"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#"
        android:textColor="@color/text_color"
        android:fontFamily="@font/orbitron_black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/contact_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:text="1234"
        android:textColor="@color/text_color"
        android:fontFamily="@font/orbitron_black"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/contact_copy_button"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:src="@drawable/ic_copy"
        app:tint="@color/primary_1" />

    <ImageView
        android:id="@+id/contact_message_button"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:src="@drawable/ic_send"
        app:tint="@color/primary_1"/>

    <ImageView
        android:id="@+id/contact_delete_button"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:src="@drawable/ic_delete"
        app:tint="@color/primary_1"/>
</LinearLayout>
